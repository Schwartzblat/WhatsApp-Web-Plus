{
  "name": "WhatsApp-Web-Plus",
  "version": "1.1.2",
  "description": "",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "./ExtPay.js",
        "./index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://web.whatsapp.com/"
  ],
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": [
        "packed.js"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
